<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="160dp"
    android:layout_marginLeft="@dimen/margin_xsmall"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_xsmall"
    android:layout_marginBottom="@dimen/margin_large"
    android:background="@drawable/box_tutorial"
    android:elevation="5dp"
    android:orientation="vertical"
    android:padding="@dimen/margin_medium">

    <TextView
        android:id="@+id/tutorial_title"
        android:fontFamily="@font/lato_black"
        android:textSize="@dimen/font_small"
        android:layout_width="match_parent"
        android:gravity="top|start"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:gravity="right|bottom"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/box_status"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tutorial_status_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:fontFamily="@font/lato_bold"
                android:textAlignment="textEnd" />
            <TextView
                android:id="@+id/tutorial_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:fontFamily="@font/lato_black"
                android:textColor="@color/light_gray"
                android:textAlignment="textEnd"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/tutorial_status_icon"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_toEndOf="@id/box_status"
            android:src="@drawable/ic_not_finished" />
    </RelativeLayout>
</LinearLayout>
