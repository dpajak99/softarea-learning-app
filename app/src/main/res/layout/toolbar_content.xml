<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="?attr/actionBarSize">

        <RelativeLayout
            android:id="@+id/profile_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/margin_xsmall"
                android:src="@drawable/demo_profile" />

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/profile_image"
                android:fontFamily="@font/lato_black"
                android:text="Jan Kowalski"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_toEndOf="@id/profile_image"
                android:fontFamily="@font/lato"
                android:text="SOFTAREA - Art Developer"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xsmall" />

            <TextView
                android:id="@+id/profile_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_position"
                android:layout_toEndOf="@id/profile_image"
                android:fontFamily="@font/lato_black"
                android:text="365pkt"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="115dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_below="@id/profile_box">

            <LinearLayout
                android:id="@+id/shortcut_card1"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium"
                android:background="@drawable/box_shortcuts">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_create_note"
                    android:outlineProvider="bounds"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="10dp"
                    android:textAllCaps="true"
                    android:text="Dodaj notatkę"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shortcut_card2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium"
                android:layout_toEndOf="@id/shortcut_card1"
                android:background="@drawable/box_shortcuts">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_show_notes"
                    android:outlineProvider="bounds"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="10dp"
                    android:textAllCaps="true"
                    android:text="Zobacz swoje notatki"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shortcut_card3"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:orientation="vertical"
                android:padding="@dimen/margin_medium"
                android:layout_toEndOf="@id/shortcut_card2"
                android:background="@drawable/box_shortcuts">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/button_show_tasks"
                    android:outlineProvider="bounds"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_bold"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="10dp"
                    android:textAllCaps="true"
                    android:text="Zobacz listę zadań na dziś"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
