<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_marginBottom="@dimen/margin_medium"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/profile_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_small"
        android:orientation="horizontal">

        <com.softarea.learningapp.components.ImageViewRounded
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/margin_xsmall"
            android:layout_marginLeft="@dimen/margin_xsmall"
            android:src="@drawable/demo_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="@string/sample_author_name"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/profile_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato"
                android:text="@string/sample_author_position"
                android:textColor="@color/white"
                android:textSize="@dimen/font_xsmall" />

            <TextView
                android:id="@+id/profile_points"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_black"
                android:text="@string/sample_author_points"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="160dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_toolbar_shortcuts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_medium" />
    </LinearLayout>
</LinearLayout>
